@model IEnumerable<CostLowApp.Models.store>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h2>Store List</h2>

    <!--Create Button: Send user to Store Create form-->
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    <!--Create Store Index table-->
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.storeNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.address)
            </th>
            <th></th>
        </tr>

        <!--Populate table from database-->
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.storeNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.storeNumber }) |
                    @Html.ActionLink("Details", "Details", new { id = item.storeNumber }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.storeNumber })
                </td>
            </tr>
        }

    </table>

    <!--Back Button: Send user to Store Action page-->
    <p>@Html.ActionLink("BACK", "StorePortal", "stores")</p>
</div>