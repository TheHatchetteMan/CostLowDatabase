@model IEnumerable<CostLowApp.Models.member>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h2>Member List</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    <!--Create Member talbe-->
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.phoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.firstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.active)
            </th>
            <th></th>
        </tr>

        <!--Populate member table from database-->
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.phoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.firstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.active)
                </td>

                <!--Button Options-->
                <td>
                    <!--Edit Button: Send user to Edit Member form-->
                    @Html.ActionLink("Edit", "Edit", new { id = item.customerId }) |

                    <!--Detials Button: Send user to Member details page-->
                    @Html.ActionLink("Details", "Details", new { id = item.customerId }) |

                    <!--Delete Button: Send user to confirm delete page-->
                    @Html.ActionLink("Delete", "Delete", new { id = item.customerId })
                </td>
            </tr>
        }

    </table>

    <!--Back Button: Send user to Member Action page-->
    <p>@Html.ActionLink("BACK", "MemberPortal", "members")</p>
</div>