@model CostLowApp.Models.department

@{
    ViewBag.Title = "Delete";
}

<div class="jumbotron">
    <h2>Delete</h2>

    <!--Checks that user actually wants to delete-->
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Department</h4>
        <hr />
        <!--Begin list of details-->
        <dl class="dl-horizontal">
            <!--Department Phone Extension-->
            <dt>
                @Html.DisplayNameFor(model => model.phoneExtension)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.phoneExtension)
            </dd>

            <!--Department Name-->
            <dt>
                @Html.DisplayNameFor(model => model.departmentName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.departmentName)
            </dd>

            <!--Store Address-->
            <dt>
                @Html.DisplayNameFor(model => model.store.address)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.store.address)
            </dd>

            <!--End list of details-->
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <!--Submit to database-->
                <input type="submit" value="Delete" class="btn btn-default" /> |

                <!--Back Button: Return user to index of departments-->
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
</div>
