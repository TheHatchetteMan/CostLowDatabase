@model CostLowApp.Models.employee

@{
    ViewBag.Title = "Delete";
}

<div class="jumbotron">
    <h2>Delete</h2>

    <!--Ensure user wants to delete-->
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Employee</h4>
        <hr />

        <!--Display Useful Data-->
        <dl class="dl-horizontal">

            <!--First Name Data-->
            <dt>
                @Html.DisplayNameFor(model => model.firstName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.firstName)
            </dd>

            <!--Last Name Data-->
            <dt>
                @Html.DisplayNameFor(model => model.lastName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.lastName)
            </dd>

            <!--Phone Number Data-->
            <dt>
                @Html.DisplayNameFor(model => model.phoneNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.phoneNumber)
            </dd>

            <!--Salary Data-->
            <dt>
                @Html.DisplayNameFor(model => model.sallary)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.sallary)
            </dd>

            <!--Store Number Data-->
            <dt>
                @Html.DisplayNameFor(model => model.storeNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.storeNumber)
            </dd>

            <!--Department Name Data-->
            <dt>
                @Html.DisplayNameFor(model => model.department.departmentName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.department.departmentName)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <!--Send Button: Delete Employee From database-->
                <input type="submit" value="Delete" class="btn btn-default" /> |

                <!--Back Button: Send user to Employee Index-->
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
</div>