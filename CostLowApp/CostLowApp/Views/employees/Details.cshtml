@model CostLowApp.Models.employee

@{
    ViewBag.Title = "Details";
}

<div class="jumbotron">
    <h2>Details</h2>

    <div>
        <h4>Employee</h4>
        <hr />

        <!--Employee Detail List-->
        <dl class="dl-horizontal">

            <!--First NAme field-->
            <dt>
                @Html.DisplayNameFor(model => model.firstName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.firstName)
            </dd>

            <!--Last Name Field-->
            <dt>
                @Html.DisplayNameFor(model => model.lastName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.lastName)
            </dd>

            <!--Phone Number Field-->
            <dt>
                @Html.DisplayNameFor(model => model.phoneNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.phoneNumber)
            </dd>

            <!--Salary Field-->
            <dt>
                @Html.DisplayNameFor(model => model.sallary)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.sallary)
            </dd>

            <!--Store Number Field-->
            <dt>
                @Html.DisplayNameFor(model => model.storeNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.storeNumber)
            </dd>

            <!--Department Name Field-->
            <dt>
                @Html.DisplayNameFor(model => model.department.departmentName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.department.departmentName)
            </dd>

        </dl>
        <!--End List-->
    </div>

    <!--Back Button: Send user to Employee Index-->
    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>